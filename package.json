{
  "name": "mdpabel-astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "dev:bun": "bunx --bun astro dev",
    "preview": "astro preview",
    "astro": "astro",
    "gen": "node scripts/process-threats.mjs",
    "sync": "npx tsx scripts/sync-content.ts",
    "build:prod": "npm run sync && astro build",
    "fetch:posts": "node scripts/fetch-one-by-one.js --type=posts",
    "fetch:cases": "node scripts/fetch-one-by-one.js --type=case-study",
    "fetch:guides": "node scripts/fetch-one-by-one.js --type=guide",
    "fetch:logs": "node scripts/fetch-one-by-one.js --type=malware-log",
    "fetch:all": "npm run fetch:posts && npm run fetch:cases && npm run fetch:guides && npm run fetch:logs",
    "fetch:all:force": "node scripts/fetch-one-by-one.js --type=posts --force=true && node scripts/fetch-one-by-one.js --type=case-study --force=true && node scripts/fetch-one-by-one.js --type=guide --force=true && node scripts/fetch-one-by-one.js --type=malware-log --force=true",
    "build:fetchAll": "npm run fetch:all && astro build",
    "build": "astro build"
  },
  "dependencies": {
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@astrojs/vue": "^5.1.4",
    "@fontsource-variable/source-serif-4": "^5.2.9",
    "@lucide/astro": "^0.562.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/he": "^1.2.3",
    "@types/markdown-it": "^14.1.2",
    "@types/sanitize-html": "^2.16.0",
    "astro": "^5.16.11",
    "astro-critters": "^2.2.1",
    "axios": "^1.13.4",
    "clsx": "^2.1.1",
    "he": "^1.2.0",
    "markdown-it": "^14.1.0",
    "sanitize-html": "^2.17.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "turndown": "^7.2.2"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/turndown": "^5.0.6",
    "dotenv": "^17.2.3",
    "gray-matter": "^4.0.3",
    "openai": "^6.16.0",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2"
  }
}
