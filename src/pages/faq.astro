---
import { Plus, Minus } from '@lucide/astro';
import he from 'he';
import { wordpress } from '../lib/wordpress-old';
import Layout from '../layouts/Layout.astro';
import ComponentWrapper from '../components/component-wrapper.astro';
import Pagination from '../components/Pagination.astro';

// --- 2. Component Logic ---
const { page } = Astro.params;
const currentPage = page ? Number(page) : 1;

const { posts, totalPages, total } = await wordpress.getPosts({
  postType: 'faq',
  perPage: 100,

  page: currentPage,
});

// --- SEO ---
const seoTitle = `FAQ - Page ${currentPage} | WordPress Support`;
const seoDesc =
  'Detailed answers about WordPress security, malware removal, and development services.';

// --- Schema ---
const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: posts.map((faq) => ({
    '@type': 'Question',
    name: he.decode(faq.title),
    acceptedAnswer: {
      '@type': 'Answer',
      text: faq.content,
    },
  })),
};
---

<Layout title={seoTitle} description={seoDesc}>
  <script
    type='application/ld+json'
    set:html={JSON.stringify(faqSchema)}
    is:inline
  />

  {/* MAIN CONTAINER: Support Light (bg-white) & Dark (bg-slate-900) */}
  <div
    class='bg-white dark:bg-slate-900 pt-10 pb-20 min-h-screen text-slate-900 dark:text-white transition-colors duration-300'>
    <ComponentWrapper>
      {/* --- Page Header --- */}
      <div class='mb-12 text-center'>
        <h1
          class='mb-6 font-bold text-slate-900 dark:text-white text-3xl md:text-4xl'>
          Frequently Asked Questions
        </h1>
        <p
          class='mx-auto mt-4 max-w-3xl text-slate-600 dark:text-slate-300 text-lg'>
          Get detailed answers to the most common questions about our WordPress
          services
        </p>
      </div>

      {/* --- FAQ Accordion List --- */}
      <div class='mx-auto max-w-4xl'>
        {
          posts && posts.length > 0 ? (
            <div class='bg-white dark:bg-slate-900 shadow-sm border border-slate-200 dark:border-slate-700 rounded-lg overflow-hidden'>
              {posts.map((faq, index) => (
                <details
                  class={`group ${
                    index !== posts.length - 1
                      ? 'border-b border-slate-200 dark:border-slate-700'
                      : ''
                  }`}>
                  {/* SUMMARY ROW */}
                  <summary class='[&::-webkit-details-marker]:hidden flex justify-between items-center hover:bg-slate-50 dark:hover:bg-slate-800 p-6 transition-colors cursor-pointer list-none'>
                    <span class='pr-4 font-semibold text-slate-800 dark:text-slate-100 text-lg'>
                      <span set:html={faq.title} />
                    </span>

                    {/* ICONS */}
                    <div class='flex-shrink-0'>
                      <Plus class='group-open:hidden w-5 h-5 text-sky-600 dark:text-sky-400' />
                      <Minus class='hidden group-open:block w-5 h-5 text-sky-600 dark:text-sky-400' />
                    </div>
                  </summary>

                  {/* CONTENT ROW */}
                  <div class='bg-slate-50 dark:bg-slate-900/50 px-6 pb-6 border-slate-200 dark:border-slate-700/50 border-t text-slate-600 dark:text-slate-300 leading-relaxed'>
                    <div
                      class='dark:prose-invert pt-4 max-w-none dark:prose-a:text-sky-400 prose-a:text-sky-600 prose'
                      set:html={faq.content}
                    />
                  </div>
                </details>
              ))}
            </div>
          ) : (
            /* Empty State */
            <div class='bg-slate-50 dark:bg-slate-800/50 py-12 border border-slate-200 dark:border-slate-800 rounded-lg text-center'>
              <h2 class='text-slate-500 dark:text-slate-400 text-lg'>
                No FAQs found.
              </h2>
            </div>
          )
        }
      </div>

      {/* --- CTA Section --- */}
      <div class='mt-12 text-center'>
        <div
          class='bg-gradient-to-r from-sky-50 dark:from-sky-600/20 to-blue-50 dark:to-blue-600/20 mx-auto p-8 border border-sky-100 dark:border-sky-500/30 rounded-lg max-w-2xl'>
          <h3 class='mb-3 font-bold text-slate-900 dark:text-white text-xl'>
            Need More Help?
          </h3>
          <p class='mb-6 text-slate-600 dark:text-slate-300'>
            Our expert team is ready to help with your specific WordPress needs
          </p>
          <div class='flex sm:flex-row flex-col justify-center gap-4'>
            <a
              href='/hire-me'
              class='bg-sky-600 hover:bg-sky-700 shadow-sm px-6 py-3 rounded-lg font-semibold text-white transition-colors'>
              Hire Me
            </a>
            <a
              href='/services'
              class='hover:bg-sky-50 dark:hover:bg-sky-400/10 px-6 py-3 border border-sky-600 dark:border-sky-400 rounded-lg font-semibold text-sky-700 dark:text-sky-400 transition-colors'>
              Services
            </a>
          </div>
        </div>
      </div>
    </ComponentWrapper>
  </div>
</Layout>
