---
import { cn } from '../lib/utils'; // Adjust path if needed
import type { HTMLAttributes } from 'astro/types';

// Allow this component to accept any standard <div> attributes
interface Props extends HTMLAttributes<'div'> {}

// Destructure 'class' (standard HTML) and 'className' (React habit) just in case
const { class: className, ...props } = Astro.props;
---

<div class={cn('mx-auto px-4 w-full max-w-5xl', className)} {...props}>
  <slot />
</div>
