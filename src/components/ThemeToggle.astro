---
import { Sun, Moon } from '@lucide/astro'; 
---

<div class="flex items-center gap-2 opacity-90" title="Dark mode is permanently enabled">
  <Sun class="w-5 h-5 text-slate-700" />
  
  <label class="inline-flex relative items-center cursor-default" aria-label="Dark mode active">
    <input 
      type="checkbox" 
      class="sr-only peer" 
      checked 
      disabled
    />
    <div class="peer after:top-0.5 after:absolute bg-slate-200 after:bg-white dark:bg-slate-700 peer-checked:bg-blue-600 after:border after:border-slate-300 peer-checked:after:border-white rounded-full after:rounded-full peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 w-11 after:w-5 h-6 after:h-5 after:content-[''] after:transition-all peer-checked:after:translate-x-full after:start-0.5"></div>
  </label>

  <Moon class="w-5 h-5 text-slate-200" />
</div>