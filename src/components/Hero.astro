---
// 1. Import Zero-JS Icons
import { CheckCircle, ShieldCheck, Star } from '@lucide/astro';
import me from "../assets/my-img.png";

// 2. Import your Links component (We will convert this next!)
// If you don't have this file yet, comment it out to prevent errors.
import Links from './Links.astro'; 
import { Image } from 'astro:assets'

// 3. Mock Data (Replace this with your real import later)
// import { siteData } from '@/site-data';
const siteData = {
  personal: { name: 'MD Pabel' }
};
---

<section class="mb-12 pt-12 md:pt-16">
  <div class="flex md:flex-row flex-col-reverse items-start gap-x-10 gap-y-8">
    
    {/* --- LEFT SECTION (Text Content) --- */}
    <div class="flex-1">
      
      {/* H1 Headline */}
      <h1 class="mb-2 font-bold text-gray-900 dark:text-white text-3xl md:text-4xl">
        WordPress Malware Removal & Security Expert
      </h1>
      
      {/* H2 Subheadline */}
      <h2 class="mb-4 font-semibold text-slate-700 dark:text-slate-300 text-xl md:text-2xl">
        4500+ WordPress Sites Cleaned — Fast, Secure, Guaranteed
      </h2>

      {/* Description */}
      <p class="my-4 text-gray-500 dark:text-slate-300 text-lg leading-relaxed">
        Hi, I'm {siteData.personal.name}. I don't just build websites; I
        protect them. If your site is hacked, redirecting to spam, or
        blacklisted by Google—I will
        <strong class="font-semibold text-slate-900 dark:text-white">
          manually clean it
        </strong>
        and secure it against future attacks. No data loss, guaranteed.
      </p>

      {/* --- STATS INDICATORS --- */}
      <div class="flex flex-wrap gap-4 mb-8">
        <div class="flex items-center gap-2 bg-white dark:bg-slate-800 px-3 py-2 border border-slate-200 dark:border-slate-700 rounded-lg font-medium text-slate-700 dark:text-slate-300 text-sm">
          <CheckCircle class="w-4 h-4 text-slate-900 dark:text-white" />
          4,500+ Fixed
        </div>
        <div class="flex items-center gap-2 bg-white dark:bg-slate-800 px-3 py-2 border border-slate-200 dark:border-slate-700 rounded-lg font-medium text-slate-700 dark:text-slate-300 text-sm">
          <Star class="w-4 h-4 text-slate-900 dark:text-white" />
          Top Rated
        </div>
        <div class="flex items-center gap-2 bg-white dark:bg-slate-800 px-3 py-2 border border-slate-200 dark:border-slate-700 rounded-lg font-medium text-slate-700 dark:text-slate-300 text-sm">
          <ShieldCheck class="w-4 h-4 text-slate-900 dark:text-white" />
          Security Expert
        </div>
      </div>

      {/* --- LINKS COMPONENT --- */}
      <Links />

    </div>

    {/* --- RIGHT SECTION (Image) --- */}
    {/* Kept 'hidden md:block' per your design */}
    <div class="hidden md:block mt-12 md:mt-0 shrink-0">
      <div class="relative w-48 h-48">
     
        <Image
          src={me}
          alt={`${siteData.personal.name} - Full Stack Developer`}
          width="192"
          height="192"
          format="avif"
          quality="mid"
          class="shadow-lg grayscale hover:grayscale-0 rounded-2xl w-full h-full object-cover transition-all duration-300"
        />
      </div>
    </div>

  </div>
</section>