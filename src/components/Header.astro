---
import { Rocket, Menu, X, ArrowRight } from '@lucide/astro';
import ComponentWrapper from './component-wrapper.astro';

// âœ… UPDATE 1: Add a 'prefetch' property to your links
// We set 'Services' to 'load' because it's a high-conversion page.
// We leave others as 'undefined' so they fallback to your global default (hover/viewport).
const links = [
  { name: 'About', href: '/about', prefetch: 'load' }, 
  { name: 'Services', href: '/wordpress-malware-removal', prefetch: 'load' }, // ðŸ’° Money Page
  { name: 'Blog', href: '/blog', prefetch: undefined },
];
---

<header
  id="main-header"
  class="top-0 z-50 sticky inset-x-0 bg-white dark:bg-slate-900 w-full transition-colors duration-300"
>
  <div class="py-5 text-black">
    <ComponentWrapper>
      <nav class="flex justify-between items-center mx-auto">
        
        {/* --- LOGO --- */}
        <div class="flex items-center gap-5">
          <a
            href="/"
            aria-label="Home"
            class="flex items-center font-medium text-black text-lg"
          >
            <div class="flex justify-center items-center bg-sky-600 dark:bg-white border border-slate-300 rounded w-8 h-8">
              <Rocket class="w-5 h-5 text-white dark:text-slate-950" />
            </div>
          </a>

          {/* --- DESKTOP NAV --- */}
          <div class="hidden sm:flex items-center gap-5">
            {links.map((link) => (
              <a
                href={link.href}
                class="text-slate-950 hover:text-black dark:hover:text-white dark:text-slate-300 transition-colors"
                data-astro-prefetch={link.prefetch} 
              >
                {link.name}
              </a>
            ))}
          </div>
        </div>

        <ul class="hidden sm:flex justify-end items-center gap-5 h-8">
          <li class="transition-opacity duration-300">
            <a
              href="https://mdpabe1.substack.com/"
              target="_blank"
              class="text-slate-950 hover:text-black dark:hover:text-white dark:text-slate-300"
            >
              Newsletter
            </a>
          </li>
          <li class="flex items-center gap-2">
            {/* âœ… UPDATE 2: Force 'Hire Me' to load immediately */}
            <a
              href="/hire-me"
              class="flex justify-center items-center bg-sky-600 hover:bg-sky-700 dark:bg-slate-700 px-6 py-2 border border-slate-300 rounded-full w-32 h-8 font-medium text-white text-sm transition-all duration-300"
              data-astro-prefetch="load"
            >
              Hire Me
            </a>
          </li>
        </ul>

        {/* --- MOBILE HAMBURGER BUTTON --- */}
        <div class="sm:hidden flex items-center gap-4">
          <button
            id="menu-open-btn"
            aria-label="Open Menu"
            class="sm:hidden block text-slate-950 hover:text-slate-700 dark:hover:text-white dark:text-slate-300 cursor-pointer"
          >
            <Menu class="w-5 h-5" />
          </button>
        </div>

      </nav>
    </ComponentWrapper>
  </div>

  {/* --- MOBILE MENU OVERLAY --- */}
  <div
    id="mobile-menu"
    class="z-[999] fixed inset-0 flex flex-col bg-white dark:bg-slate-900 overflow-hidden transition-transform translate-x-full duration-300 ease-in-out"
    aria-hidden="true"
  >
    {/* 1. Menu Header */}
    <div class="flex justify-between items-center px-6 py-5 border-slate-100 dark:border-slate-800 border-b">
      <div class="flex items-center gap-3">
        <div class="flex justify-center items-center bg-sky-600 dark:bg-white rounded-lg w-8 h-8">
          <Rocket class="w-4 h-4 text-white dark:text-slate-950" />
        </div>
        <span class="font-bold text-slate-900 dark:text-white text-lg">Menu</span>
      </div>
      
      <button
        id="menu-close-btn"
        aria-label="Close Menu"
        class="bg-slate-100 dark:bg-slate-800 p-2 rounded-full text-slate-500 hover:text-slate-900 dark:hover:text-white dark:text-slate-400 cursor-pointer"
      >
        <X class="w-6 h-6" />
      </button>
    </div>

    {/* 2. Main Navigation Links (Mobile) */}
    <div class="flex flex-col justify-start px-6 pt-10 overflow-y-auto grow">
      <ul class="flex flex-col space-y-6">
        {links.map((link) => (
          <li>
            <a
              href={link.href}
              class="group flex justify-between items-center font-bold text-slate-800 hover:text-sky-600 dark:hover:text-sky-400 dark:text-slate-100 text-xl transition-colors mobile-link"
              data-astro-prefetch={link.prefetch}
            >
              {link.name}
              <ArrowRight class="opacity-50 w-5 h-5" />
            </a>
          </li>
        ))}
      </ul>
    </div>

    {/* 3. Bottom Actions */}
    <div class="bg-slate-50 dark:bg-slate-800/50 p-6 border-slate-200 dark:border-slate-800 border-t">
      <div class="flex flex-col gap-3">
        {/* âœ… UPDATE 3: Mobile 'Hire Me' also gets priority */}
        <a
          href="/hire-me"
          class="flex justify-center items-center bg-sky-600 hover:bg-sky-700 py-3 rounded-full w-full font-semibold text-white text-base transition-all"
          data-astro-prefetch="load"
        >
          Hire Me
        </a>
        <a
          href="https://mdpabe1.substack.com/"
          target="_blank"
          class="flex justify-center items-center hover:bg-white dark:hover:bg-slate-800 py-3 border border-slate-300 dark:border-slate-600 rounded-full w-full font-medium text-slate-700 dark:text-slate-300 transition-all"
        >
          Newsletter
        </a>
      </div>
      
      <div class="mt-6 text-slate-500 dark:text-slate-400 text-xs text-center">
        &copy; {new Date().getFullYear()} MD Pabel.
      </div>
    </div>
  </div>
</header>

<script>
  document.addEventListener('astro:page-load', () => {
    const menu = document.getElementById('mobile-menu') as HTMLElement | null;
    const openBtn = document.getElementById('menu-open-btn') as HTMLElement | null;
    const closeBtn = document.getElementById('menu-close-btn') as HTMLElement | null;
    const mobileLinks = document.querySelectorAll('.mobile-link');

    if (!menu || !openBtn || !closeBtn) return;

    const toggleMenu = (isOpen: boolean) => {
      if (isOpen) {
        menu.classList.remove('translate-x-full');
        menu.classList.add('translate-x-0');
        document.body.style.overflow = 'hidden';
      } else {
        menu.classList.add('translate-x-full');
        menu.classList.remove('translate-x-0');
        document.body.style.overflow = '';
      }
    };

    openBtn.onclick = () => toggleMenu(true);
    closeBtn.onclick = () => toggleMenu(false);

    mobileLinks.forEach((link) => {
      (link as HTMLElement).onclick = () => toggleMenu(false);
    });
  });
</script>