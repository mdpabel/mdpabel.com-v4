---
import { Rocket, Mail, Contact, User, Briefcase, Compass } from '@lucide/astro';
import ComponentWrapper from './component-wrapper.astro';
import ThemeToggle from './ThemeToggle.astro'
// import ModeToggle from './ModeToggle.astro'; // We will build this next!

const currentYear = new Date().getFullYear();
---

<footer class="border-slate-300/60 dark:border-slate-800 border-t">
  <ComponentWrapper class="py-8">
    <div class="flex md:flex-row flex-col justify-between items-start gap-8">
      
      {/* --- LOGO & DESCRIPTION --- */}
      <div class="flex flex-col gap-4">
        <a
          href="/"
          aria-label="Home"
          class="flex items-center font-medium text-slate-950 dark:text-white text-lg"
        >
          <div class="flex justify-center items-center bg-sky-600 dark:bg-slate-800 border border-slate-300 dark:border-slate-700 rounded w-10 h-10">
            <Rocket class="w-5 h-5 text-white" />
          </div>
          <span class="ml-2 font-semibold">MD Pabel</span>
        </a>
        <p class="max-w-xs text-slate-600 dark:text-slate-400 text-sm">
          Building innovative solutions for the future. Subscribe to our
          newsletter for updates.
        </p>
      </div>

      {/* --- QUICK LINKS --- */}
      <div class="flex flex-col gap-4">
        <h4 class="font-semibold text-slate-950 dark:text-white text-lg">
          Quick Links
        </h4>
        <ul class="flex flex-col gap-2">
          <li>
            <a
              href="/about"
              class="flex items-center gap-2 text-slate-700 hover:text-slate-950 dark:hover:text-white dark:text-slate-300 transition-colors"
            >
              <User class="w-4 h-4" />
              About
            </a>
          </li>
          <li>
            <a
              href="/services"
              class="flex items-center gap-2 text-slate-700 hover:text-slate-950 dark:hover:text-white dark:text-slate-300 transition-colors"
            >
              <Briefcase class="w-4 h-4" />
              Services
            </a>
          </li>
          <li>
            <a
              href="/explore"
              class="flex items-center gap-2 text-slate-700 hover:text-slate-950 dark:hover:text-white dark:text-slate-300 transition-colors"
            >
              <Compass class="w-4 h-4" />
              Explore
            </a>
          </li>
        </ul>
      </div>

      {/* --- GET IN TOUCH --- */}
      <div class="flex flex-col gap-4">
        <h4 class="font-semibold text-slate-950 dark:text-white text-lg">
          Get in Touch
        </h4>
        <ul class="flex flex-col gap-2">
          <li>
            <a
              href="https://mdpabe1.substack.com/"
              target="_blank"
              class="flex items-center gap-2 text-slate-700 hover:text-slate-950 dark:hover:text-white dark:text-slate-300 transition-colors"
            >
              <Mail class="w-4 h-4" />
              Newsletter
            </a>
          </li>
          <li>
            <a
              href="/hire-me"
              class="flex items-center gap-2 text-slate-700 hover:text-slate-950 dark:hover:text-white dark:text-slate-300 transition-colors"
            >
              <Contact class="w-4 h-4" />
              Hire Me
            </a>
          </li>
        </ul>
      </div>
    </div>

    {/* --- COPYRIGHT --- */}
    <div class="mt-8 pt-4 border-slate-200 dark:border-slate-800 border-t text-center">
      <div class="flex justify-center md:justify-between items-center">
        <p class="text-slate-600 dark:text-slate-400 text-sm">
          &copy; {currentYear} MD Pabel. All rights reserved.
        </p>

        {/* Placeholder for Mode Toggle */}
        {/* <ModeToggle /> */}
        <ThemeToggle /
      </div>
    </div>
  </ComponentWrapper>
</footer>